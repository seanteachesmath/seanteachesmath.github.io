      <statement>
        <p>
          Theorem statement.          
        </p>
      </statement>
      <proof>
        <p>
          Proof of theorem.
        </p>
      </proof>
    </theorem>
    
    <example>
      <statement>
        <p>
          Statement of example
        </p>
